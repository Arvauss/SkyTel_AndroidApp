<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contactuspagepic"/>

    //the terms, legal, policies
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/blackblocks" />

    //the icons
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/blackblocks"/>

    <ImageView
        android:id="@+id/block1"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/yellowbackground"/>

    <ImageView
        android:id="@+id/block2"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="200dp"
        android:background="@color/black"/>


    <ImageView
        android:id="@+id/block3"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/block4"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/yellowbackground"/>


</RelativeLayout>