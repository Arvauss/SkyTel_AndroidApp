<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ContactUs"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/mtn_building" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/skytel_mobile_logo" />


    //the terms, legal, policies

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/blueaboutusbackground" />

    <TextView
        android:id="@+id/legalLink"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LEGAL"
        android:textColor="#FFCB00"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/privacypolicylink"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PRIVACY_POLICY"
        android:textColor="#FFCB00"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/tcandcslink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="70dp"
        android:linksClickable="true"
        android:text="T's AND C's"
        android:textColor="#FFCB00" />

    //the icons

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@color/white" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/insta" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/twitter" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/facebooknew" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/youtubenew" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="350dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="?attr/isLightTheme"
        android:background="@drawable/whatsapp"
        android:clickable="true" />

    <ImageView
        android:id="@+id/block1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/blueaboutusbackground" />

    <TextView
        android:id="@+id/textinfo1"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="215dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/block2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/yellowbackground" />

    <TextView
        android:id="@+id/textinfo2"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="215dp"
        android:textColor="@color/white"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/block3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/yellowbackground" />

    <TextView
        android:id="@+id/textinfo3"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="455dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/block4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/blueaboutusbackground" />

    <TextView
        android:id="@+id/textinfo4"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="455dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>